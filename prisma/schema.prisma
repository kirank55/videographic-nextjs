generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model - synced with Auth.js
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  
  // Auth.js required
  accounts      Account[]
  sessions      Session[]
  
  // App-specific
  projects      Project[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// Auth.js Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// Auth.js Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Auth.js Verification Token
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Video Project model
model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  
  // Video configuration
  width       Int      @default(1920)
  height      Int      @default(1080)
  fps         Int      @default(30)
  duration    Float    @default(5.0)  // in seconds
  
  // Timeline data stored as JSON
  timeline    Json     // Array of TimelineEvent
  
  // Project metadata
  thumbnail   String?  // Base64 or URL
  status      ProjectStatus @default(DRAFT)
  
  // Ownership
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
}

enum ProjectStatus {
  DRAFT
  RENDERING
  COMPLETED
  FAILED
}
